<div class="formBlock withLoaderInside">
    {% include 'PolitizrFrontBundle:Navigation\\Xhr:_xhrLocalLoader.html.twig' %}

    <form name="directMessage" id="formDirectMessage">
        {{ form_errors(form) }}

        {{ form_row(form.name, { 'attr': { 'placeholder': 'Votre nom' }}) }}
        {{ form_row(form.email, { 'attr': { 'placeholder': 'Votre email' }}) }}
        {% if not phone %}
            <div style="display: none">
        {% endif %}
        {{ form_row(form.phone, { 'attr': { 'placeholder': 'Votre téléphone' }}) }}
        {% if not phone %}
            </div>
        {% endif %}
        {% if not city %}
            <div style="display: none">
        {% endif %}
        {{ form_row(form.city, { 'attr': { 'placeholder': 'Votre ville' }}) }}
        {% if not city %}
            </div>
        {% endif %}
        {{ form_row(form.description, { 'attr': { 'placeholder': 'Votre message' }}) }}

        {{ form_rest(form) }}
        <div class="buttonDirectMessage">
            <button type="button" action="submitDirectMessage">
                Envoyer
            </button>
        </div>
        {% if automatic_creation is defined and automatic_creation %}
            <br/><br/>
            <div class="notice">
                <i class="icon-info"></i>
                L'envoi de ce message vaut acceptation de nos <a action="openCgu">Mentions légales</a> et de notre <a action="openCharte">charte</a>. Un administrateur prendra connaissance de votre message avant de le publier sur notre plateforme.
            </div>
        {% endif %}
    </form>
</div>
